# =============================================================================
# Git Configuration
# =============================================================================
#
# User info and machine-specific settings are in ~/.gitconfig.local
# Generated by the bootstrap script. Run bootstrap to create/update it.
#
# =============================================================================

# Include essential settings (aliases, core options)
[include]
    path = ~/.gitconfig-essential

# --- Machine-specific settings ---
# Contains: user name/email, GitHub accounts, URL rewrites
# Generated by bootstrap script - run it to create this file
[include]
    path = ~/.gitconfig.local

[core]
    excludesfile = ~/.gitignore

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
