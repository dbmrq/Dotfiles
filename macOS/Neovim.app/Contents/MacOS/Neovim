#!/bin/bash
# Neovim wrapper - opens files in Ghostty with nvim

# Get the file path(s) passed to the app
# macOS passes files as arguments when opening with "Open With"
if [[ $# -gt 0 ]]; then
    # Build a quoted argument list for nvim
    # Need to properly escape paths with spaces
    args=""
    for file in "$@"; do
        args="$args \"$file\""
    done
    # Open Ghostty with nvim editing the file(s)
    open -na "Ghostty.app" --args --command="nvim $args"
else
    # No file specified - just open nvim
    open -na "Ghostty.app" --args --command="nvim"
fi

