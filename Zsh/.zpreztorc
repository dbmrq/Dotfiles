# Prezto options

zstyle ':prezto:*:*' color 'yes'

# Modules (order matters)
zstyle ':prezto:load' pmodule \
    'environment' \
    'terminal' \
    'editor' \
    'history' \
    'directory' \
    'spectrum' \
    'utility' \
    'completion' \
    'prompt' \
    'fasd' \
    'history-substring-search' \
    'homebrew'

# Editor
zstyle ':prezto:module:editor' key-bindings 'vi'

# Prompt
zstyle ':prezto:module:prompt' theme 'dbmrq'
