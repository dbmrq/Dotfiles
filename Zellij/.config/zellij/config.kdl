// Zellij Configuration
// ====================

// Use terminal's ANSI colors (inherits from Ghostty theme)
theme "ansi"

// Cleaner UI without special font characters
simplified_ui true

// No borders around panes
pane_frames false

// Use compact layout (single bar at bottom with tabs)
default_layout "compact"

// Quit instead of detach when terminal closes
on_force_close "quit"

// Don't auto-copy on selection
copy_on_select false

show_startup_tips false

ui {
    pane_frames {
        hide_session_name true
    }
}
